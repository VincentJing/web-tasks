<p id="notice"><%= notice %></p>
<h3 class="text-center"><%= @post.title %></h3>
<div class="text-success">
    <%= @post.content %>
</div>

<br>

<div class="panel panel-info">
    <div class="panel-heading">评论区
        <span class="badge pull-right"><%= @post.comments.count%></span>
    </div>
    <div class="panel-body">
        <% @post.comments.each do |comment| %>
        <div class="panel panel-default">
            <div class="panel-body">
                <%= comment.content %>
            </div>
            <div class="panel panel-footer">

                <% if comment.status == false %>
                <%= form_for :comment, url: post_comment_path(@post,comment), method: :put do |f|%>
                <span>发表于<%= comment.created_at.strftime("%Y-%m-%d")%>
                    | email:<%= comment.email %>
                    <div class="btn btn-primary pull-right">
                        <%= f.submit :审核通过%></span>
                </div>

            <%end
          else%>
                <span>发表于<%= comment.created_at.strftime("%Y-%m-%d")%>
                    | email:<%= comment.email %></span>
                <%end%>
            </div>
        </div>
        <% end %>
    </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    新建评论
  </div>
  <div class="panel-body">
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </p>
    <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <% end %>
    <%= link_to 'Edit', edit_post_path(@post) %>
    |
    <%= link_to 'Back', posts_path %>
  </div>
</div>
